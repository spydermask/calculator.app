<grid>
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height


        TextInput:
            id:cal_input
            text:"0"
            font_size:65
            halign:"right"
            size_hint:(1,.15)

        GridLayout:
            cols:4
            rows:5

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"("
                background_color:(157/255,157/255,157/255,1)
                on_press: root.button_value("(")

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"CE"
                background_color:(157/255,157/255,157/255,1)
                on_press: root.remove()

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:")"
                on_press: root.button_value(")")
                background_color:(157/255,157/255,157/255,1)


            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"/"
                background_color:(157/255,157/255,157/255,1)
                on_press: root.sign("/")

            Button:
                id:me
                size_hint:(.2,.2)
                font_size:32
                text:"7"
                on_press: root.button_value(7)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"8"
                on_press: root.button_value(8)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"9"
                on_press: root.button_value(9)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"X"
                background_color:(157/255,157/255,157/255,1)
                on_press: root.sign("*")


            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"4"
                on_press: root.button_value(4)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"5"
                on_press: root.button_value(5)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"6"
                on_press: root.button_value(6)
                
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"-"
                background_color:(157/255,157/255,157/255,1)
                on_press: root.sign("-")


            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"1"
                on_press: root.button_value(1)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"2"
                on_press: root.button_value(2)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"3"
                on_press: root.button_value(3)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"+"
                background_color:(157/255,157/255,157/255,1)
                on_press: root.sign("+")

            
            
            Button:
                id:clear
                size_hint:(.2,.2)
                font_size:32
                text:"C"
                on_press: root.clear()
                

            

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"0"
                on_press: root.button_value(0)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"."
                on_press: root.button_value('.')


            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"="
                background_color:(0,1,0,1)
                on_press: root.result()


          